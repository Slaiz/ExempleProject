<Window x:Class="WpfApplication.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBox Width="150"  Text="{Binding TextProperty1, UpdateSourceTrigger=PropertyChanged}"  Margin="5" ToolTip=""/>
            <TextBox Width="150"  Text="{Binding TextProperty2, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            <Button Content="Add" Command="{Binding AddCommand}" Width="70" Margin="5"/>
            <Button Content="Click me" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Command="{Binding ClickCommand}"/>
        </StackPanel>
        <DataGrid  ItemsSource="{Binding ItemsList, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="130,0,0,0" VerticalAlignment="Top" Height="180" Width="229" Grid.Row="1"/>
    </Grid>
</Window>
